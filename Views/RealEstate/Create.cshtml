@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPageHome.cshtml";
}
<link rel="stylesheet" href="~/Font-end/CSS/RealEstate.css" />
<script defer src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script defer src="~/Scripts/Scripts-fontend/API-Address-Selector.js"></script>
<div class="listing-form">
    <h2>Tạo tin đăng</h2>

    <form method="post" action="@Url.Action("Create", "RealEstate")" enctype="multipart/form-data">

        <!-- Tiêu đề tin đăng -->
        <div class="form-group">
            <label for="title">Tiêu đề tin đăng:</label>
            <input type="text" id="title" name="Title" placeholder="Nhập tiêu đề tin đăng" required>
        </div>

        <!-- Loại giao dịch (ListingType: Bán/Cho thuê) -->
        <div class="form-group">
            <label>Loại giao dịch:</label>
            <div class="radio-button">
                <input type="radio" name="ListingType" value="Bán" required>
                <label>Bán</label>

                <input type="radio" name="ListingType" value="Cho thuê">
                <label>Cho thuê</label>
            </div>
        </div>

        <!-- Loại hình BĐS -->
        <div class="form-group">
            <label>Loại hình bất động sản:</label>
            <select id="propertyType" name="Type" required>
                <option value="">-- Chọn loại hình --</option>
                <option>Căn hộ</option>
                <option>Nhà phố</option>
                <option>Đất nền</option>
            </select>
        </div>

        <!-- Diện tích -->
        <div class="form-group">
            <label>Diện tích (m²):</label>
            <input type="number" id="area" name="Area" placeholder="Nhập diện tích" step="0.01">
        </div>

        <!-- Phòng ngủ -->
        <div class="form-group">
            <label>Số phòng ngủ:</label>
            <input type="number" id="bedrooms" name="Bedrooms" placeholder="Nhập số phòng ngủ" min="0">
        </div>

        <!-- Phòng tắm -->
        <div class="form-group">
            <label>Số phòng tắm:</label>
            <input type="number" id="bathrooms" name="Bathrooms" placeholder="Nhập số phòng tắm" min="0">
        </div>

        <!-- Địa chỉ -->
        <div class="form-group">
            <label>Thành phố / Quận / Phường:</label>
            <div class="address-select">

                <select id="city" name="City">
                    <option value="">-- Chọn Tỉnh/Thành phố --</option>
                </select>

                <select id="district" name="District">
                    <option value="">-- Chọn Quận/Huyện --</option>
                </select>

                <select id="ward" name="Ward">
                    <option value="">-- Chọn Phường/Xã --</option>
                </select>

            </div>
        </div>

        <!-- Địa chỉ cụ thể -->
        <div class="form-group">
            <label for="specificAddress">Địa chỉ cụ thể:</label>
            <input type="text" id="specificAddress" name="Address" placeholder="Nhập địa chỉ cụ thể">
        </div>

        <!-- Giá -->
        <div class="form-group">
            <label for="price">Báo giá (VNĐ):</label>
            <input type="number" id="price" name="Price" placeholder="Nhập giá">
        </div>

        <!-- Mô tả -->
        <div class="form-group">
            <label>Mô tả:</label>
            <textarea id="description" name="Description" rows="4" placeholder="Nhập mô tả chi tiết..."></textarea>
        </div>

        <!-- Đính tệp (Ảnh sản phẩm) -->
        <div class="form-group">
            <label for="productImage">Tải ảnh sản phẩm:</label>
            <input type="file" id="productImage" name="Image_product" accept="image/*">
        </div>

        <!-- Trạng thái (ẩn, mặc định là Active) -->
        <input type="hidden" name="Status" value="Active">

        <!-- Nút gửi -->
        <div class="form-group">
            <button type="submit" class="submit-btn">Tiếp tục</button>
        </div>

    </form>
</div>
