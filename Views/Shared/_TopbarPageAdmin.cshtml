<header class="topbar">
    <div class="search">
        <input type="text" placeholder="Tìm kiếm bất động sản, khách hàng...">
        <i class="fa-solid fa-magnifying-glass"></i>
    </div>

    <div class="top-right">
        <i class="fa-regular fa-bell notification"></i>

        @if (Session["AdminName"] != null)
        {
            <div class="userinfo" style="display: flex; align-items: center; gap: 10px;">
                <div class="text" style="text-align: right;">
                    <span class="name" style="display: block; font-weight: bold; color: #333;">
                        @Session["AdminName"]
                    </span>
                    <span class="role" style="display: block; font-size: 12px; color: #666;">
                        @Session["AdminRole"]
                    </span>
                </div>

                <div class="avatar" style="width: 40px; height: 40px; background: #3b82f6; border-radius: 50%; display: flex; align-items: center; justify-content: center; overflow: hidden;">

                    @{
                        
                        string avatarFile = Session["UserAvatar"] as string;
                    }

                    @if (!string.IsNullOrEmpty(avatarFile))
                    {
                        <img src="@Url.Content("~/Font-end/asset/icon/" + avatarFile)"
                             alt="User Avatar"
                             style="width: 100%; height: 100%; object-fit: cover;"
                             onerror="this.style.display='none'; this.nextElementSibling.style.display='block';" />

                        <i class="fa-solid fa-user" style="display: none; color: white;"></i>
                    }
                    else
                    {
                        <i class="fa-solid fa-user" style="color: white;"></i>
                    }

                </div>

                <a href="@Url.Action("Register", "Account")" style="margin-left:10px; font-size:12px; color:red; text-decoration:none;">
                    <i class="fa-solid fa-power-off"></i>
                </a>
            </div>
        }
        else
        {
            <a href="@Url.Action("Login","Account")" style="font-weight:bold;">Đăng nhập</a>
        }
    </div>
</header>