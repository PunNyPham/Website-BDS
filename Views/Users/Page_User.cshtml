@model Website_BDS.Models.ViewModel.UserProfileViewModel
@{
    ViewBag.Title = "Page_User";
    Layout = null;
    //Layout = "~/Views/Shared/_LayoutPageHome.cshtml";
}
<style>
    .infomation-user h3 {
        color: #007bff;
        margin-bottom: 10px;
    }

    .infomation-user p {
        font-size: 1em;
        margin: 5px 0;
    }

    .edit-profile .btn {
        padding: 8px 16px;
        background-color: #007bff;
        color: white;
        border-radius: 6px;
        text-decoration: none;
    }
</style>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Url.Content("~/Font-end/CSS/Page_User.css")" />
</head>
<body>
    <div class="container-user">
        <div class="bars">
            <!-- Menu hoặc sidebar -->
        </div>

        <div class="avatar-user">
            <div class="avartar">
                <div class="background-avatar">
                    <div class="avartar-main">
                        <img src="@Url.Content(
                                    string.IsNullOrEmpty(Model?.User?.Avatar_User)
                                        ? "~/Font-end/asset/icon/User-default.jpg"
                                        : "~/Content/" + Model.User.Avatar_User
                                    )"
                             alt="Avatar"
                             style="width:100px; height:100px; border-radius:50%; object-fit:cover;" />

                    </div>
                </div>
            </div>

            <div class="edit-profile">
                <a href="@Url.Action("Edit", "Users", new { id = Model?.User.UserID ?? 0 })" class="btn btn-primary">Chỉnh sửa</a>
            </div>
        </div>

        <div class="infomation-user">
            <h3>@(Model?.User.FullName ?? "Chưa có tên")</h3>
            <p><strong>Số điện thoại:</strong> @(Model?.User.PhoneNumber ?? "Chưa có số")</p>
            @*<p><strong>Trạng thái:</strong> @(Model?.Status ?? "Chưa cập nhật")</p>*@
        </div>
    </div>

    <div class="post-manager">
        <!-- Sau này có thể hiển thị bài đăng của người dùng -->
        @if (Model != null && Model.Products.Any())
        {
            foreach (var item in Model.Products)
            {
                <div class="product-card">
                    <div class="product-image">
                        <img src="~/Font-end/asset/icon/Product_Null.jpg"
                             alt="Avatar"
                             style="width:100px; height:100px; border-radius:50%; object-fit:cover;" />


                    </div>
                    <span class="badge">NEW PROJECT</span>
                    <h4>@item.Title</h4>
                    <p>Địa chỉ: @item.Address</p>
                    <p>Giá: @item.Price VNĐ</p>
                    <div class="card-buttons">
                        <a href="@Url.Action("Details", "Products", new { id = item.ProductID })" class="view-btn">Xem tin</a>
                        <button class="save-btn">Lưu tin</button>
                    </div>
                    <a href="@Url.Action("Edit_RealEstate", "RealEstate", new { id = item.ProductID })">Sửa</a>
                </div>
            }

        }
        else
        {
            <p>Hiện chưa có dự án nào được đăng tải.</p>

        }

    </div>
</body>
</html>