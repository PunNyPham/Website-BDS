@{
    Layout = null;
}   
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký - Bất Động Sản Việt Nam</title>
    <link rel="stylesheet" href="@Url.Content("~/Font-end/CSS/signin.css")">

</head>
<body>
    <div class="container">
        <h1>Đăng Ký Tài Khoản</h1>
        @using (Html.BeginForm("Register", "Users", FormMethod.Post, new { id = "register-form" }))
        {
            @*@Html.AntiForgeryToken()*@
            <div class="form-group">
                <label for="username">Tên Đăng Nhập</label>
                <input type="text" id="username" name="FullName" required placeholder="Nhập tên đăng nhập..." />
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="Email" required placeholder="Nhập địa chỉ email..." />
            </div>

            <div class="form-group">
                <label for="password">Mật Khẩu</label>
                <input type="password" id="password" name="HashPassword" required placeholder="Nhập mật khẩu..." />
            </div>

            <div class="form-group">
                <label for="confirm-password">Xác Nhận Mật Khẩu</label>
                <input type="password" id="confirm-password" name="ConfirmPassword" required placeholder="Xác nhận mật khẩu..." />
            </div>

            <button type="submit">Đăng Ký</button>
        }

        <p>Đã có tài khoản? <a href="@Url.Action("Login", "Users")">Đăng Nhập</a></p>
    </div>
</body>
</html>