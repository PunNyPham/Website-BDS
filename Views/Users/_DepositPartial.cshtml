@model Website_BDS.Models.ViewModel.UserProfileViewModel


    <!-- Style -->

    <style>
        .recharge-box {
            max-width: 500px;
            margin: auto;
            padding: 24px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(0,0,0,0.05);
            font-family: 'Segoe UI', sans-serif;
            color: #333;
        }

        .section-title {
            font-size: 18px;
            margin: 20px 0 10px;
            color: #007bff;
            border-bottom: 1px solid #eee;
            padding-bottom: 4px;
        }

        .amount-list label {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #f5f5f5;
            padding: 10px 14px;
            margin-bottom: 8px;
            border-radius: 6px;
            cursor: pointer;
            transition: background 0.2s;
        }

            .amount-list label:hover {
                background: #e9f0ff;
            }

        .amount-list input[type="radio"] {
            margin-right: 10px;
        }

        .payment-summary div {
            display: flex;
            justify-content: space-between;
            margin: 6px 0;
            font-size: 15px;
        }

        .payment-method {
            margin-top: 10px;
        }

            .payment-method label {
                display: block;
                margin-bottom: 6px;
            }

        .note {
            font-size: 13px;
            color: #666;
            margin-top: 4px;
        }

        .submit-btn {
            width: 100%;
            margin-top: 20px;
            padding: 12px;
            background: #007bff;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background 0.2s;
        }

            .submit-btn:hover {
                background: #0056b3;
            }
    </style>

    <!-- Style -->
</head>
<body>


    <div class="recharge-box">

        <h2 class="section-title">Chọn giá trị nạp</h2>

        <div class="amount-list">
            <label><input type="radio" name="amount" value="200000" checked> 200.000 đ <span>(Khuyến mãi: 20%)</span></label>
            <label><input type="radio" name="amount" value="300000"> 300.000 đ <span>(Khuyến mãi: 25%)</span></label>
            <label><input type="radio" name="amount" value="500000"> 500.000 đ <span>(Khuyến mãi: 25%)</span></label>
            <label><input type="radio" name="amount" value="1000000"> 1.000.000 đ <span>(Khuyến mãi: 50%)</span></label>
            <label><input type="radio" name="amount" value="2000000"> 2.000.000 đ <span>(Khuyến mãi: 50%)</span></label>
            <label><input type="radio" name="amount" value="4000000"> 4.000.000 đ <span>(Khuyến mãi: 50%)</span></label>
        </div>

        <h2 class="section-title">Thông tin thanh toán</h2>
        <div class="payment-summary">
            <div><strong>Giá trị nạp:</strong> <span id="amount-display">200.000 đ</span></div>
            <div><strong>Khuyến mãi:</strong> <span id="bonus-display">40.000 đ (20%)</span></div>
            <div><strong>Số tiền thực nhận:</strong> <span id="total-display">240.000 đ</span></div>
        </div>

        <h2 class="section-title">Chọn phương thức thanh toán</h2>
        <div class="payment-method">
            <label><input type="radio" name="method" value="bank" checked> Chuyển khoản ngân hàng</label>
            <p class="note">Thanh toán qua chuyển khoản ngân hàng hoặc quét mã QR</p>
        </div>

        <button class="submit-btn">Bấm để nạp tiền</button>

    </div>


    <script>
        const bonusRates = {
            200000: 0.2,
            300000: 0.25,
            500000: 0.25,
            1000000: 0.5,
            2000000: 0.5,
            4000000: 0.5
        };

        function formatCurrency(vnd) {
            return vnd.toLocaleString('vi-VN') + ' đ';
        }

        function updateSummary() {
            const amount = parseInt(document.querySelector('input[name="amount"]:checked').value);
            const bonusRate = bonusRates[amount] || 0;
            const bonus = Math.round(amount * bonusRate);
            const total = amount + bonus;

            document.getElementById('amount-display').textContent = formatCurrency(amount);
            document.getElementById('bonus-display').textContent = formatCurrency(bonus) + ` (${bonusRate * 100}%)`;
            document.getElementById('total-display').textContent = formatCurrency(total);
        }

        document.querySelectorAll('input[name="amount"]').forEach(input => {
            input.addEventListener('change', updateSummary);
        });

        updateSummary(); // Khởi tạo ban đầu
    </script>


