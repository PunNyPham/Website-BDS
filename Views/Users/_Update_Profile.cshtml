@model Website_BDS.Models.User

    <!-- style -->
    <style>
        .profile-form {
            max-width: 700px;
            margin: 0 20px;
            padding: 24px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(0,0,0,0.05);
            font-family: 'Segoe UI', sans-serif;
            color: #333;
        }

            .profile-form h2 {
                text-align: center;
                margin-bottom: 20px;
                color: #007bff;
            }

            .profile-form label {
                display: block;
                margin-top: 12px;
                font-weight: bold;
            }

.profile-form input ,.profile-form select ,.profile-form textarea {
                width: 100%;
                padding: 10px;
                margin-top: 4px;
                border: 1px solid #ccc;
                border-radius: 6px;
                font-size: 14px;
            }

            .profile-form .row {
                display: flex;
                gap: 16px;
            }

                .profile-form .row > div {
                    flex: 1;
                }

            .profile-form button {
                margin-top: 24px;
                width: 100%;
                padding: 12px;
                background: #007bff;
                color: white;
                font-weight: bold;
                border: none;
                border-radius: 6px;
                cursor: pointer;
                transition: background 0.2s;
            }

                .profile-form button:hover {
                    background: #0056b3;
                }
    </style>



    <!-- style -->

    <form class="profile-form">
        <h2>Cập nhật hồ sơ cá nhân</h2>

        <label>Họ và tên</label>
        <input type="text" placeholder="Ghi đầy đủ họ và tên" required>

        <div class="row">
            <div>
                <label>Ngày sinh</label>
                <input type="date">
            </div>
            <div>
                <label>Tuổi</label>
                <input type="number" placeholder="Ví dụ: 40">
            </div>
            <div>
                <label>Giới tính</label>
                <select>
                    <option>Nam</option>
                    <option>Nữ</option>
                    <option>Khác</option>
                </select>
            </div>
        </div>

        <label>Số điện thoại</label>
        <input type="tel" placeholder="Số điện thoại liên hệ">

        <label>Email liên hệ</label>
        <input type="email" placeholder="Email nhận thông báo">

        <label>Học vấn</label>
        <input type="text" placeholder="Tất cả trình độ">

        <label>Địa chỉ liên hệ</label>
        <input type="text" placeholder="Ví dụ: Tòa A, Số 6 Nguyễn Công Hoan, Ba Đình">

        <label>Tỉnh thành phố</label>
        <input type="text" placeholder="Tỉnh thành phố">

        <label>Ảnh đại diện (Dung lượng < 5MB)</label>
        <input type="file" accept="image/*">

        <label>Tên công ty</label>
        <input type="text" placeholder="Tên công ty đang làm việc">

        <label>Khu vực hoạt động</label>
        <input type="text" placeholder="Ví dụ: Quận 1, Quận 3, Quận 10...">

        <label>Ngôn ngữ sử dụng</label>
        <input type="text" placeholder="Ví dụ: Tiếng Anh, Tiếng Việt... ghi tối đa 3 ngôn ngữ">

        <label>Dự án thế mạnh</label>
        <input type="text" placeholder="Ví dụ: Vinhomes Golden River, Empire City... ghi tối đa 5 dự án">

        <label>Giới thiệu</label>
        <textarea rows="3" placeholder="Giới thiệu ngắn về bản thân"></textarea>

        <label>Kinh nghiệm làm việc</label>
        <textarea rows="4" placeholder="Mô tả ngắn gọn quá trình công tác, kinh nghiệm làm việc"></textarea>

        <button type="submit">Cập nhật hồ sơ</button>
    </form>


